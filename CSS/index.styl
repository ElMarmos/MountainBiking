azulclaro = #2DA0E3;
azulmedioclaro = #1F90D2;
azulmediooscuro = #2767AB;
azuloscuro = #1E252F;
bgcolor = #E5E6DF;

body, html
	height 100%

body
	background-color bgcolor;
	font-family 'Lato', sans-serif

	#contenedor-principal
		
		.barra
			background-color azulclaro
			height 70px
			position fixed
			width 100%
			z-index 30

			a
				color white
				font-size 20px
				font-weight bold
				line-height 65px
				text-decoration none
				vertical-align middle
				margin-left 140px

				span
					margin-left 4px

		.slider
			height 100vh
			overflow hidden
			position relative

			img
				bottom 0
				position absolute
				width 100%
				z-index -100
				opacity 0.9

		.div-contenido
			
			.separador-contenido
				height 10px
				background-color azulmedioclaro

			.contenido
				height 500px

	.div-footer1
		background-color azulmediooscuro
		height 200px

	.div-footer2
		background-color azuloscuro
		color white
		height 80px
		text-align center
		padding-top 18px

		span
			font-weight bold
			display block

		p
			display block
			text-transform uppercase

			a
				text-decoration none
				color white

				&:hover
					color azulclaro

	#menu
		
		&.active
			left 230px
			position relative

			#sidebar-wrapper
				left 230px
				transition all 0.4s ease 0s
				width 230px

	#sidebar-wrapper
		background-color azuloscuro
		height 100%
		left 0px
		margin-left -230px
		position fixed
		transition all 0.4s ease 0s
		width 230px
		z-index 1000

	.sidebar-nav
		list-style none
		margin 0
		padding 0
		position absolute
		top 0
		width 230px

		li
			font-size 18px
			font-weight bold
			line-height 40px
			text-align center
			text-transform uppercase

			.sidebar-option
				color #ffffff
				display block
				text-decoration none

				span
					display inline
					margin-right 5px
					top 3px
					text-shadow none

				&:hover
					background-color rgba(255,255,255,0.2)
					text-decoration none

				&:active
				&:focus
					text-decoration none

		&>.sidebar-brand
			font-size 20px
			height 70px
			position relative

			img
				float left
				height 35px
				margin 20px 0px 0px 20px

			a
				color #ffffff
				position absolute
				text-decoration none
				top 12px
				right 8px

				span
					top 3px
					margin-left 2px

				&:hover
					background-color none
					color #fff