naranja-separador = #FF9100;
azulmediooscuro = #2767AB;
azuloscuro = #1E252F;
bgcolor = #E5E6DF;

//  <<-------------Pagina Principal------------->>

// body, html
// 	height 100%

body
	background-color bgcolor;
	font-family 'Lato', sans-serif
		
	.barra
		background-color naranja
		height 70px
		position fixed
		width 100%
		z-index 30
		box-shadow 0px 3px 10px black

		a
			color white
			font-size 20px
			font-weight bold
			line-height 65px
			text-decoration none
			margin-left 40px

			span
				margin-left 4px
		
		.div-titulo-pagina
			height 100%
			padding-top 5px
			position absolute
			text-align center
			top 0
			width 100%
			z-index -5
			
			.titulo-pagina
				font-family font28
				font-size 70px
				margin 0
				color white
				font-weight normal
				text-transform uppercase
		
	.separador-contenido
		background-color naranja-separador
		box-shadow 0px 0px 20px black
		height 10px
		z-index 1000
		
	.div-info1
		background-image url('http://www.dailydesktop.eu/data/media/18/Tree%201680X1050%20Texture%20Wallpaper.jpg')
		background-position center
		background-repeat no-repeat
		background-size cover
		display table
		width 100%
		
		#foto-panel-info
			background-position center
			border 4px solid #FFC800
			box-shadow 0px 0px 30px rgba(black, 0.9)
			height 50vh
			margin 0 auto
			max-width 50vh
			width 100%
			
		#panel-info
			display table
			margin 0 auto
			max-width 80vh
			min-height 49vh
			width 100%
			
			#texto-panel-info
				display table-cell
				vertical-align middle
			
				h1 
					color #FFC800
					font-family font28
					font-size 70px
					margin 0px
					text-transform capitalize

				p
					text-align justify
					font-size 23px
					text-decoration bold
					color white
					
	.div-info2
		background-image url('http://subtlepatterns.com/patterns/debut_dark.png')
		// background-image url('http://content.wallpapers-room.com/resolutions/1600x1000/W/Wallpapers-room_com___Woody_by_PrekeshC_1600x1000.png')
		// background-position center
		// background-repeat no-repeat
		// background-size cover

	// <--Main Container con carousel-->

	.slider-imagenes
		height 100vh
		
		.carousel
			
			.caption-background
				background-color rgba(black, 0.4)
				border-radius 25px
				display inline-block
				padding 10px
				
				h1
					margin 10px 0px

				p
					font-size 18px

			.slide1
				background-image url('../IMAGES/elegida.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
			.slide2
				background-image url('../IMAGES/elegida1.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
			.slide3
				background-image url('../IMAGES/elegida3.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
	// <------------------------------->

	.div-footer2
		background-color azuloscuro
		color white
		height 80px
		text-align center
		padding-top 18px

		span
			font-weight bold
			display block

		p
			display block
			text-transform uppercase

			a
				text-decoration none
				color white

				&:hover
					color naranja

	#menu
		
		&.active
			left 230px
			position relative

			#sidebar-wrapper
				left 230px
				transition all 0.4s ease 0s
				width 230px

	#sidebar-wrapper
		background-color azuloscuro
		height 100%
		left 0px
		margin-left -230px
		position fixed
		transition all 0.4s ease 0s
		width 230px
		z-index 1000

		.sidebar-nav
			list-style none
			margin 0
			padding 0
			position absolute
			top 0
			width 230px
		
			ul
				
				li
					font-size 18px
					font-weight bold
					line-height 40px
					margin-left -40px
					text-align center
					text-transform uppercase

					a
						color #ffffff
						display block
						text-decoration none

						&:hover
							background-color rgba(255,255,255,0.2)
							text-decoration none

						&:active
						&:focus
							text-decoration none

			&>.sidebar-brand
				font-size 20px
				height 70px
				position relative

				img
					float left
					height 35px
					margin 20px 0px 0px 20px

				a
					color #ffffff
					position absolute
					right 8px
					text-decoration none
					text-transform uppercase
					font-weight bold
					top 12px

					span
						top 3px
						margin-left 2px

					&:hover
						background-color none
						color #fff

//  <<-------------Pagina Principal------------->>


//  <<-------------Pagina de Ruta------------->>

	.contenido-ruta
		min-height 100vh
		padding 80px 120px

		.titulo-ruta
			font-size 50px
			font-weight bold
			margin 20px 0px

		.seccion-ruta
			margin 20px 0px

			.titulo-seccion
				font-weight bold
				font-size 18px

			.texto-seccion
				font-size 16px

@media screen and (max-width: 768px)
	
	.barra
		a
			margin-left 20px !important

	.contenido-ruta
		padding 80px 30px
		
	.slider-imagenes
		.carousel
			.caption-background
				h1
					font-size 20px

				p
					font-size 14px
					

@font-face {
    font-family: font28;
    src: url('../FONTS/28.ttf');
}