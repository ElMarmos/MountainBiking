// azulclaro = #2DA0E3;
naranja = #FF9100;
// azulmedioclaro = #1F90D2;
naranja-separador = #FC6B0A;
azulmediooscuro = #2767AB;
azuloscuro = #1E252F;
bgcolor = #E5E6DF;

//  <<-------------Pagina Principal------------->>

// body, html
// 	height 100%

body
	background-color bgcolor;
	font-family 'Noto Sans', sans-serif;
		
	.barra
		background-color naranja
		height 70px
		position fixed
		width 100%
		z-index 30
		box-shadow 0px 3px 10px black

		a
			color white
			font-size 20px
			font-weight bold
			line-height 65px
			text-decoration none
			margin-left 40px

			span
				margin-left 4px
		
		.div-titulo-pagina
			height 100%
			padding-top 5px
			position absolute
			text-align center
			top 0
			width 100%
			z-index -5
			
			.titulo-pagina-big
				font-family font28
				font-size 70px
				margin 0
				color #301800
				font-weight normal
				text-transform uppercase
				
			.titulo-pagina-medium
				font-family font28
				font-size 50px
				margin 0
				color #301800
				font-weight normal
				text-transform uppercase
				
			.titulo-pagina-small
				font-family font28
				font-size 50px
				margin-right 15px
				color #301800
				font-weight normal
				text-transform uppercase
				float right
		
	.separador-contenido
		background-color naranja-separador
		box-shadow 0px 0px 20px black
		height 10px
		z-index 1000
		
	.div-info1
		background-image url('../IMAGES/infobg.jpg')
		background-position center
		background-repeat no-repeat
		background-size cover
		display table
		width 100%
		
		#foto-panel-info
			background-position center
			border 4px solid #FFC800
			box-shadow 0px 0px 30px rgba(black, 0.9)
			height 50vh
			margin 0 auto
			max-width 50vh
			width 100%
			
		#panel-info
			display table
			margin 0 auto
			max-width 80vh
			min-height 49vh
			width 100%
			
			#texto-panel-info
				display table-cell
				vertical-align middle
			
				h1 
					color #FFC800
					font-family font28
					font-size 70px
					margin 0px
					text-align center
					text-transform capitalize

				p
					color white
					font-size 23px
					font-weight bold
					text-align justify
					
	.div-info2
		background-image url('../IMAGES/videosbg.png')
		text-align center
		
		.titulo-video
			color naranja
			text-transform uppercase
			margin-top 0px
			font-family 'Indie Flower', cursive;
			font-weight bold
			

	// <--Main Container con carousel-->

	.slider-imagenes
		height 100vh
		
		.carousel
			
			.caption-background
				background-color rgba(black, 0.4)
				border-radius 25px
				display inline-block
				padding 10px
				
				h1
					margin 10px 0px

				p
					font-size 18px

			.slide1
				background-image url('../IMAGES/elegida.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
			.slide2
				background-image url('../IMAGES/elegida1.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
			.slide3
				background-image url('../IMAGES/elegida3.jpg')
				background-repeat no-repeat
				background-position center
				height 100vh
				
	// <------------------------------->

	.div-footer2
		background-color azuloscuro
		color white
		height 80px
		text-align center
		padding-top 18px

		span
			font-weight bold
			display block

		p
			display block
			text-transform uppercase

			a
				text-decoration none
				color white

				&:hover
					color naranja

	#menu
		
		&.active
			left 230px
			position relative

			#sidebar-wrapper
				left 230px
				transition all 0.4s ease 0s
				width 230px

	#sidebar-wrapper
		background-color azuloscuro
		height 100%
		left 0px
		margin-left -230px
		position fixed
		transition all 0.4s ease 0s
		width 230px
		z-index 1000

		.sidebar-nav
			list-style none
			margin 0
			padding 0
			position absolute
			top 0
			width 230px
		
			ul
				
				li
					font-size 18px
					font-weight bold
					line-height 40px
					margin-left -40px
					text-align center
					text-transform uppercase

					a
						color #ffffff
						display block
						text-decoration none

						&:hover
							background-color rgba(255,255,255,0.2)
							text-decoration none

						&:active
						&:focus
							text-decoration none

			&>.sidebar-brand
				font-size 20px
				height 70px
				position relative

				img
					float left
					height 35px
					margin 20px 0px 0px 20px

				a
					color #ffffff
					position absolute
					right 8px
					text-decoration none
					text-transform uppercase
					font-weight bold
					top 12px

					span
						top 3px
						margin-left 2px

					&:hover
						background-color none
						color #fff

//  <<-------------Pagina Principal------------->>


//  <<-------------Pagina de Ruta------------->>

	.bgruta
		background-image url('../IMAGES/rutabg.jpg')
		background-position center
		background-repeat no-repeat
		background-size cover

		.contenido-ruta
			background-color rgba(0,0,0,0.3)
			min-height 100vh
			padding 80px 120px

			.titulo-ruta
				color #FFA927
				font-family tituloruta
				font-size 80px
				margin 20px 0px
				text-transform uppercase

			.seccion-ruta
				margin 20px 0px

				.titulo-seccion
					font-family tituloruta
					font-size 40px
					color #FDCA49

				.texto-seccion
					color white
					font-size 20px
					font-weight bold
					max-width 500px
					text-align justify

@media screen and (max-width: 768px)
	
	.barra
		a
			margin-left 20px !important
			
			.div-titulo-pagina
				float

	.contenido-ruta
		padding 80px 30px !important
		
		.titulo-ruta
			text-align center !important
			font-size 65px !important
			
		.seccion-ruta
			.titulo-seccion
				font-size 35px !important
			.texto-seccion
				font-size 18px
		
	.slider-imagenes
		.carousel
			.caption-background
				h1
					font-size 20px

				p
					font-size 14px
			
	#foto-panel-info
		max-width 85vh !important

	#panel-info
		max-width 100vh !important

		#texto-panel-info
			h1
				font-size 50px !important
				text-align center
				
			p
				font-size 18px !important
					

@font-face {
    font-family: font28;
    src: url('../FONTS/28.ttf');
}

@font-face {
    font-family: tituloruta;
    src: url('../FONTS/tituloruta.ttf');
}